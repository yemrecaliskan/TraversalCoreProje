@model Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header pb-0">
        <h6>Yeni Rezervasyon</h6>
    </div>
    <div class="card-body">
        <div>
            <form method="post">
                <div class="form-group">
                    @Html.Label("Lokasyon")
                    @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.ListCity, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Kişi Sayısı")
                    <input type="text" asp-for="PersonCount" class="form-control" />
                </div>
                <div class="form-group">
                    @Html.Label("Tarih")
                    <input type="date" asp-for="ReservationDate" class="form-control" />
                </div>
                <div class="form-group">
                    @Html.Label("Eklemek istedikleriniz")
                    <textarea class="form-control" asp-for="Description" required="" spellcheck="false"></textarea>
                </div>
                <button class="btn btn-primary">Rezervasyon Yap</button>
            </form>
        </div>
    </div>
</div>